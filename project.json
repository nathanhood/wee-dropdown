{
	"name": "Wee Dropdown Demo",
	"description": "Demo site for Wee Dropdown Module development",
	"paths": {
		"root": "public_html",
		"assets": "assets"
	},
	"style": {
		"core": {
			"buttons": true,
			"code": true,
			"forms": true,
			"print": true,
			"tables": true,
			"responsive": {
				"enable": true,
				"offset": 25,
				"breakpoints": {
					"mobileLandscape": 480,
					"tabletPortrait": 768,
					"desktopSmall": 1024,
					"desktopMedium": 1280,
					"desktopLarge": 1440
				}
			}
		},
		"build": [

		],
		"compile": {
			"ie9.min.css": "custom/ie9.less",
			"guide.min.css": "custom/guide.less"
		},
		"legacy": {
			"enable": true,
			"watch": false,
			"breakpoint": 4,
			"rootSize": "62.5%",
			"dest": "ie8.min.css",
			"build": [
				"custom/ie8.less"
			],
			"compile": {
				"guide.ie8.min.css": "guide.min.css"
			}
		}
	},
	"script": {
		"core": {
			"enable": true,
			"features": {
				"assets": true,
				"chain": true,
				"data": true,
				"dom": true,
				"events": true,
				"routes": true,
				"screen": true,
				"view": true
			}
		},
		"build": [

		],
		"compile": {
			"ie8.min.js": [
				"polyfill/es5-shim.js",
				"polyfill/html5shiv.js",
				"polyfill/sizzle.js",
				"polyfill/wee.svg.js",
				"custom/ie8.js"
			],
			"ie9.min.js": [
				"polyfill/wee.slice.js",
				"polyfill/wee.placeholder.js"
			],
			"guide.min.js": "custom/guide.js"
		},
		"validate": {
			"watch": true,
			"jscs": ".jscs.json",
			"jshint": ".jshintrc"
		},
		"sourceMaps": true
	},
	"generator": {
		"enable": true,
		"build": [
			"public/assets/guide/config.json"
		]
	},
	"server": {
		"ghostMode": true,
		"host": "auto",
		"port": 9000,
		"reload": {
			"enable": true,
			"watch": {
				"root": true,
				"paths": [

				],
				"extensions": [
					"html"
				]
			}
		},
		"tasks": {
			"local": {
				"https": false,
				"proxy": "http://wee.dev"
			},
			"static": {
				"https": false
			}
		}
	}
}